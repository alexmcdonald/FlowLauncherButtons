<?xml version="1.0"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<apiVersion>57.0</apiVersion>
	<isExposed>true</isExposed>
	<masterLabel>Flow Launcher Buttons</masterLabel>
	<description>Create buttons to launch flows from Salesforce records.</description>
	<targets>
		<target>lightning__RecordPage</target>
	</targets>
	<targetConfigs>
