            <property name="button4Label" type="String" label="Button 4 Label" />
			<property name="button4Flow" type="String" label="Button 4 Flow API Name" />
            <property name="button4Size" type="String" label="Modal 4 Size" datasource="small,large" />

            <property name="button5Label" type="String" label="Button 5 Label" />
			<property name="button5Flow" type="String" label="Button 5 Flow API Name" />
            <property name="button5Size" type="String" label="Modal 5 Size" datasource="small,large" />
        </targetConfig>
	</targetConfigs>
</LightningComponentBundle>